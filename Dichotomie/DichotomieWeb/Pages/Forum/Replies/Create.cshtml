@page
@model DichotomieWeb.Pages.Forum.Replies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Reply @Model.Topic.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Reply.TopicFK" type="hidden" value="@Model.Topic.TopicId"/>
            <div class="form-group">
                <label asp-for="Reply.MainContent" class="control-label"></label>
                <input asp-for="Reply.MainContent" class="form-control" />
                <span asp-validation-for="Reply.MainContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
