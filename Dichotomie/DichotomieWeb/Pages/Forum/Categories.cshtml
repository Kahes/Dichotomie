@page
@model DichotomieWeb.Pages.CategoriesModel
@{
    ViewData["Title"] = "Forum";
}

<h2>Forum</h2>

<ul>
    @foreach (var category in Model._categories)
    {
        <li>
            @category.Name
            <ul>
                @foreach (var subCategory in category.SubCategories)
                {
                    <li><a asp-page="/Forum/Topics" asp-route-categoryId="@subCategory.CategoryId">@subCategory.Name</a></li>
                }
            </ul>
        </li>
    }
</ul>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
